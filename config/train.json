{
    "name": "DARM_train",
    "phase": "train",
    "gpu_ids": [
        1
    ],
    "display_port": 8097,
    "path": {
        "log": "logs",
        "tb_logger": "tb_logger",
        "results": "results",
        "checkpoint": "checkpoint",
        "resume_state": null
    },
    "datasets": {
        "train": {
            "name": "XCAD",
            "dataroot": "./data/Dataset_XCAD/",
            "batch_size": 1,
            "centered": true,
            "num_workers": 8,
            "use_shuffle": true
        },
        "val": {
            "name": "XCAD",
            "dataroot": "./data/Dataset_XCAD/",
            "data_len": 3
        }
    },
    "model": {
        "which_model_G": "ddpm_seg",
        "finetune_norm": false,
        "unet": {
            "in_channel": 1,
            "out_channel": 1,
            "inner_channel": 64,
            "channel_multiplier": [
                1,
                1,
                2,
                2,
                4,
                4
            ],
            "attn_res": [
                16
            ],
            "res_blocks": 2,
            "dropout": 0 //.2
        },
        "beta_schedule": {
            "train": {
                "schedule": "linear",
                "n_timestep": 2000,
                "linear_start": 1e-6,
                "linear_end": 1e-2
            },
            "val": {
                "schedule": "linear",
                "n_timestep": 2000,
                "linear_start": 1e-6,
                "linear_end": 1e-2
            }
        },
        "diffusion": {
            "image_size": 256,
            "channels": 1,
            "conditional": false
        }
    },
    "train": {
        "n_epoch": 150,
        "val_freq": 5,
        "save_checkpoint_epoch": 100,
        "print_freq": 1,
        "optimizer": {
            "type": "adam",
            "lr": 5e-6
        },
        "ema_scheduler": {
            "step_start_ema": 5000,
            "update_ema_every": 1,
            "ema_decay": 0.9999
        }
    }
}